{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("jedgueruela\\tendrranalytics\\assetbundles\\tendrranalytics\\TendrrAnalyticsAsset") %}
{% do view.registerAssetBundle("jedgueruela\\tendrranalytics\\assetbundles\\analyticscpsection\\AnalyticsCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "https://github.com/jedgueruela/tendrr-analytics/blob/master/README.md" %}

{# The title of this CP section #}
{% set title = "Tendrr Analytics" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('tendrr-analytics') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@jedgueruela/tendrranalytics/assetbundles/analyticscpsection/dist', true) ~ '/img/Analytics-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
    <div class="buttons">
        <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('tendrr-analytics') }}</a>
    </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
    <h2>{{ "Analytics CP Section body goes here"|t('tendrr-analytics') }}</h2>
    <img src="{{ iconUrl }}" height="64" width="64" />
    <p class="textline"></p>
{% endset %}
